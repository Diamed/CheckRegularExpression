<Window x:Class="CheckRegularExpression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckRegularExpression"
        mc:Ignorable="d"
        Title="Check Regular Expression" Height="361.333" Width="525">
    <Grid>
        <TextBox x:Name="TbPattern" Height="55" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 VerticalAlignment="Top" Margin="0,0,10,0" AcceptsReturn="True" TabIndex="0"/>
        <TextBox x:Name="TbResultText" VerticalScrollBarVisibility="Auto" TabIndex="3" 
                 TextWrapping="Wrap" Margin="0,86,10,10"/>
        <Button x:Name="BtnCheck" Content="Check" VerticalAlignment="Top" Click="BtnCheck_ClickAsync"
                Margin="0,60,10,0" HorizontalAlignment="Right" Width="75" TabIndex="2"/>
        <TextBox x:Name="TbUrl" Height="20" Margin="0,60,105,0" TabIndex="1"
                 TextWrapping="Wrap" VerticalAlignment="Top" KeyDown="TbUrl_KeyDown"/>
    </Grid>
</Window>
